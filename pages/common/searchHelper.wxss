/****search-helper****/
.searchHelper{position:fixed;bottom:0rpx;width:100%;height:100rpx;display:flex;align-items:center;justify-content:center;background-color:white;}
.search-helper{width:100%;height:120rpx;display:flex;justify-content:center;align-items:center;}
.search-helper button{width:60%;}
.show{display: flex;}
.hide{display: none;}

/****cansle-search****/
.cancle-search{display:flex;flex-direction:column;align-items:center;height:450rpx;background-color:white;}
.cancle-search,.share-to-friend ,.share-to-circle, .cancle-share{border:1rpx solid #D1D1D1;}
 .hr{border-top:1rpx solid #D1D1D1;width:80%;}
.share-to-friend, .share-to-circle, .hr, .cancle-share{margin-top:30rpx;}
.share-to-friend, .share-to-circle, .cancle-share{width:300rpx;font-size:35rpx;padding:0rpx 10rpx 0;}
.cancle-search{border:1rpx solid #D1D1D1;position:fixed;bottom:0rpx;width:80%;}
